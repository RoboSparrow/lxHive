name: Untitled
mode: production
storage:
    in_use: Mongo
    Mongo:
        host_uri: 'mongodb://127.0.0.1'
        db_name: schemaschema
extensions:
    ExtendedQuery:
        class_name: \API\Extensions\ExtendedQuery\ExtendedQuery
        enabled: true
xAPI:
    latest_version: 1.0.2
    statement_get_limit: 100
    default_statement_get_format: exact
    supported_versions:
        - 1.0.2
    supported_auth_scopes:
        - { name: super, description: 'Administrate the LRS' }
        - { name: statements/write, description: 'Write statements' }
        - { name: statements/read, description: 'Read statements' }
        - { name: statements/read/mine, description: 'Read own statements' }
        - { name: attachments, description: 'Include attachments' }
        - { name: state, description: 'Access the State API' }
        - { name: profile, description: 'Access the Profile API' }
        - { name: define, description: '(Re)define new Activities' }
        - { name: all/read, description: 'Full read-only access' }
        - { name: all, description: 'Full access' }
    oauth:
        reauthorize_time: 0
        reauthenticate_time: 2592000
        branding: { enabled: false, logo_path: null, header: null, footer: null, css_path: null }
filesystem:
    exposed_url: /attachments
    in_use: local
    local:
        root_dir: ../storage/files
slim:
    settings:
        httpVersion: 1.1
        responseChunkSize: 4096
        outputBuffering: append
        determineRouteBeforeAppMiddleware: false
        displayErrorDetails: false
        addContentLengthHeader: true
        routerCacheFile: false
